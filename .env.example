# Instagram Comment Like Bot Environment Variables Example
# Bu faylı .env olaraq kopyalayın və öz dəyərlərinizlə doldurun

# Telegram Bot Settings
BOT_TOKEN=YOUR_BOT_TOKEN_HERE
BOT_USERNAME=@your_bot_username

# Instagram Settings
INSTAGRAM_DOMAIN=https://www.instagram.com
INSTAGRAM_API_BASE=https://www.instagram.com/api/v1

# Like Settings
MAX_LIKES_PER_ACCOUNT=100
MIN_DELAY_BETWEEN_LIKES=20
MAX_DELAY_BETWEEN_LIKES=90
MAX_ACCOUNTS_PER_COMMENT=0

# Safety Settings
MAX_ACTIVITY_PER_HOUR=30
ACCOUNT_COOLDOWN_HOURS=1
IP_ROTATION_ENABLED=true
PROXY_ROTATION_ENABLED=true

# Database Settings
DATABASE_PATH=./instagram_like_bot.db

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=./bot.log

# Feature Flags
AUTO_LIKE=true
MULTI_ACCOUNT=true
UNLIMITED_ACCOUNTS=true
ACCOUNT_GROUPS=true
SAFETY_MODE=true
DEBUG_MODE=false

# Proxy Settings (optional)
# PROXY_LIST=http://proxy1:port,http://proxy2:port

# Admin Settings (optional)
# ADMIN_IDS=123456789,987654321